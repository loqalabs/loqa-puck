{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Test Relay",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/test-go/cmd/main.go",
            "env": {
                "LOG_LEVEL": "debug",
                "HUB_ADDRESS": "localhost:50051"
            },
            "console": "integratedTerminal"
        },
        {
            "name": "Run Tests (Debug Mode)",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${workspaceFolder}",
            "env": {
                "LOG_LEVEL": "debug"
            },
            "console": "integratedTerminal"
        }
    ]
}